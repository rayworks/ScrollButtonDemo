<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.spzone.android.ctrl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <com.spzone.android.ctrl.ScrollButton
        android:background="@drawable/default_bkg_shape"
        android:id="@+id/scroll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        app:leftText="Kline"
        app:rightText="Tline"
        app:selectedBkgColor="@color/blueviolet"
        app:initSidePosition="1"
        app:textColor="@color/white"
        app:textSize="22sp" />

</LinearLayout>